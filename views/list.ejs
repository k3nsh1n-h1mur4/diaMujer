<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" 
                integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <title>Listado</title>
</head>
<body>
   
    <% if (rows) { %>
        <div class="container mt-5">
            <div class="row">
                <div class="col">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">id</th>
                                <th scope="col">Matrícula</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">U. Adscripción</th>
                                <th scope="col">Turno</th>
                                <th scope="col">Domicilio</th>
                            </tr>
                        </thead>
                        <tbody class="table-striped">
                            <% rows.forEach(function(row) { %>
                            <tr>
                                <th scope="row"><%= row.id %></th>
                                <td><%= row.matricula %></td>
                                <td><%= row.nombre %></td>
                                <td><%= row.uadscripcion %></td>
                                <td><%= row.turno %></td>
                                <td><%= row.domicilio %></td>
                                <td><a href="/delete/<%= row.id %>" class="btn btn-danger">Borrar</a></td>
                                <td><a href="/update/<%= row.id %>" class="btn btn-secondary">Editar</a></td>
                                <td><a href="/qrcode/<%= row.id %>" class="btn btn-warning">QRCODE</a></td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    <% } %>
</body>
</html>